<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bo"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="50dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/click"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:textSize="27dp"
            android:textColor="@color/black"
            android:text="Đăng Kí Tài Khoản"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/input_tk"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Tên Tài Khoản"
            android:textColorHint="#787676"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/input_password01"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="8dp"
            android:hint="Nhập password"
            android:textColorHint="#787676"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/input_password02"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="8dp"
            android:hint="Nhập lại password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#787676"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/b1"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:textSize="19sp"
            android:text="Đăng Kí"
            android:gravity="center"
            android:id="@+id/register"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>